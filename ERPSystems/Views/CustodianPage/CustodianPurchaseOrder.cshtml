@model ERPSystems.Models.QuoteModel

@{
    ViewBag.Title = "CustodianQuotation";
    Layout = "~/Views/Shared/_CustodianPage.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
    <link href="~/Style/quotation.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>

<section class="home">
    <div class="main--content">
        <div class="tabular--wrapper">
            <h3 class="table-title">
                Check Purchase Order Items
            </h3><br />
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Purchase ID</th>
                            <th>Date Created</th>
                            <th>Total Item Quantity</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.quoteForms != null)
                            {
                                foreach (var i in Model.quoteForms)
                                {
                                    if (i.Status != "Pending")
                                    {
                                        <tr>
                                            <td>@i.PurID</td>
                                            <td>@i.PurDate</td>
                                            <td>@i.TotalItem</td>
                                            <td>@i.Status</td>
                                            <td>
                                                <button class="view" data-pur-id="@i.PurID" data-pur-date="@i.PurDate" data-supp-name="@i.SupplierName" data-supp-zcode="@i.SupplierZipcode"
                                                        data-supp-barangay="@i.SupplierBarangay" data-supp-city="@i.SupplierCity" data-supp-municipality="@i.SupplierMunicipality" data-supp-phone="@i.SupplierPhone" data-quote-id="@i.QuoteID"
                                                        data-quote-discount="@i.Discount" data-quote-subtotal="@i.Subtotal" data-quote-total="@i.Total">
                                                    <span>
                                                        <i class="fas fa-eye"></i>
                                                    </span>
                                                    <span>View PO</span>
                                                </button>
                                                <button class="delete" data-pur-id="@i.PurID">
                                                    <span>
                                                        <i class='bx bx-trash'></i>
                                                    </span>
                                                    <span>Delete PO</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
    <div class="invoice-wrapper show" id="print-area">
        <div class="invoice">
            <div class="exit">
                <i class='bx bxs-exit'></i>
            </div>
            <div class="invoice-container">
                <div class="invoice-head">
                    <div class="invoice-head-top">
                        <div class="invoice-head-top-left text-start">
                            <img src="images/logo.png">
                        </div>
                        <div class="invoice-head-top-right text-end">
                            <h3>Purchase Order</h3>
                        </div>
                    </div>
                    <div class="hr"></div>
                    <div class="invoice-head-middle">
                        <div class="invoice-head-middle-left text-start">
                            <p><span class="text-bold">Date</span>:<input id="purdate" readonly style="border:none" /></p>
                        </div>
                        <div class="invoice-head-middle-right text-end">
                            <p><span class="text-bold">Purchase No# </span><input id="purid" readonly style="border:none" /></p>
                        </div>
                    </div>
                    <div class="hr"></div>
                    <div class="invoice-head-bottom">
                        <div class="invoice-head-bottom-left">
                            <ul class="ul-group">
                                <li class='text-bold'>Received From:</li>
                                <li><input id="suppname" readonly style="border:none" /></li>
                                <li><input id="suppzcode" readonly style="border:none" /></li>
                                <li><input id="suppbarangay" readonly style="border:none" /></li>
                                <li><input id="suppcity" readonly style="border:none" /></li>
                                <li><input id="suppmunicipality" readonly style="border:none" /></li>
                                <li><input id="suppphone" readonly style="border:none" /></li>
                            </ul>
                        </div>
                        <div class="invoice-head-bottom-right">
                            <ul class="ul-group text-end">
                                <li class='text-bold'>Send To:</li>
                                <li>Company Custodian</li>
                                <li>2705 N. Enterprise</li>
                                <li>Orange, CA 89438</li>
                                <li>Talisay City</li>
                                <li>Cebu</li>
                                <li>09939336145</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="overflow-view">
                    <div class="invoice-body">
                        <table>
                            <thead id="dataTableHead">
                                <tr>
                                    <td class="text-bold">Product Id</td>
                                    <td class="text-bold">Product Name</td>
                                    <td class="text-bold">Description</td>
                                    <td class="text-bold">Unit</td>
                                    <td class="text-bold">UnitPrice</td>
                                    <td class="text-bold">Quantity</td>
                                    <td class="text-bold">Update Inventory</td>
                                </tr>
                            </thead>
                            <tbody id="dataTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="quotation-form">
                    <div class="result-group">
                        <label for="subtotal">Subtotal:</label>
                        <input id="subtotal" readonly>
                    </div>
                    <div class="result-group">
                        <label for="discount">Discount:</label>
                        <input id="discount" readonly>
                    </div>
                    <div class="result-group">
                        <label for="total">Total:</label>
                        <input id="total" readonly>
                    </div>
                </div>
                <div class="invoice-foot text-center">
                    <p><span class="text-bold text-center">NOTE:&nbsp;</span>This is computer generated receipt and does not require physical signature.</p>
                    <div class="invoice-btns">
                        <button id="receiveButton" type="button" class="invoice-btn" style="background-color: #d4edda; color: #155724;">
                            <span>
                                <i class="fas fa-check"></i>
                            </span>
                            <span>Receive</span>
                        </button>
                        <button id="returnButton" type="button" class="invoice-btn" style="background-color: #e2dcb1; color: #856404;">
                            <span>
                                <i class="fas fa-undo"></i>
                            </span>
                            <span>Return to Supplier</span>
                        </button>
                        <button type="button" class="invoice-btn" onclick="goBack()" style="background-color: #f8d7da; color: #721c24;">
                            <span>
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span>Back</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/receivepo.js"></script>
</section>