@model ERPSystems.Models.Account
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Style/register.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.13.2.js"></script>
</head>
<div class="main-container ">
    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.UserFname)
            @Html.TextBoxFor(model => model.UserFname, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserLname)
            @Html.TextBoxFor(model => model.UserLname, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserMname)
            @Html.TextBoxFor(model => model.UserMname, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName)
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserPassword)
            @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
        </div>
        <!-- Add more fields as needed -->

        <button type="submit" class="btn btn-primary">Register</button>
        <div class="form-group">
            <label>@ViewBag.Message</label>
        </div>
    }
</div>
<script src="~/Scripts/register.js"></script>




