@model ERPSystems.Models.RequestModel
@{
    ViewBag.Title = "AdminQuotationList";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<head>
    <link href="~/Style/QoutePage.css" rel="stylesheet" />
</head>
<section class="home">
    <div class="header">
        <a href="@Url.Action("QuotationList","AdminPage")" class="alert-link">Purchase Order</a> | List Of Quotations
    </div>
    <div class="main-container" id="parentDiv">
        <div class="main-container-header">
            <h3>Purchase Order Details</h3>
            <div class="po-details">
                <ul>
                    <li class="text-bold">Purchase Order No: @ViewBag.PurId</li>
                    <li class="text-bold">Date Created: @ViewBag.PurCreated</li>
                </ul>
            </div>
        </div>
        <div class="qoutation-header">
            <h2>Quotation List</h2>
        </div>
        @{
            if (Model.quotationform != null)
            {
                foreach (var data in Model.quotationform)
                {
                    <div class="qoutation-form">
                        <ul>
                            <li>Quotation No: @data.QuoteId</li>
                            <li>Created: @data.QuoteCreated</li>
                            <li>Quote Total: @data.QuoteTotal</li>
                            <li>Status: @data.QuoteStatus</li>

                        </ul>
                        <button class="view" data-qoute-id="@data.QuoteId" data-created-at="@data.QuoteCreated" data-qoute-total="@data.QuoteTotal" data-qoute-disc="@data.QuoteDiscount" data-qoute-sub="@data.QuoteSubTotal">View</button>
                    </div>
                }
            }
        }
    </div>
    <div class="invoice-wrapper show" id="print-area">
        <div class="invoice">
            <div class="exit">
                <i class='bx bxs-exit'></i>
            </div>
            <div class="invoice-container">
                <div class="invoice-head">
                    <div class="invoice-head-top">
                        <div class="invoice-head-top-left text-start">
                            <img src="images/logo.png">
                        </div>
                        <div class="invoice-head-top-right text-end">
                            <h3>Qoutation Form</h3>
                        </div>
                    </div>
                    <div class="hr"></div>
                    <div class="invoice-head-middle">
                        <div class="invoice-head-middle-left text-start">
                            <p><span class="text-bold">Date</span>:<input id="Quotedate" readonly style="border:none" /></p>
                        </div>
                        <div class="invoice-head-middle-right text-end">
                            <p><span class="text-bold">Qoutation No</span>:<input id="Quoteid" readonly style="border:none" /></p>
                        </div>
                    </div>
                    <div class="hr"></div>
                    <div class="invoice-head-bottom">
                        <div class="invoice-head-bottom-left">
                            <ul class="ul-group">
                                <li class='text-bold'>Request From:</li>
                                <li>*</li>
                                <li>*</li>
                                <li>*</li>
                                <li>*</li>
                            </ul>
                        </div>
                        <div class="invoice-head-bottom-right">
                            <ul class="ul-group text-end">
                                <li class='text-bold'>Request To:</li>
                                <li>Top Management</li>
                                <li>2705 N. Enterprise</li>
                                <li>Orange, CA 89438</li>
                                <li>contact@koiceinc.com</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="overflow-view">
                    <div class="invoice-body">
                        <table class="myTable">
                            <thead id="dataTableHead">
                                <tr>
                                    <td class="text-bold">ProdId</td>
                                    <td class="text-bold">Product Name</td>
                                    <td class="text-bold">Description</td>
                                    <td class="text-bold">Unit</td>
                                    <td class="text-bold">Quantity</td>
                                    <td class="text-bold">PricePerUnit</td>
                                </tr>
                            </thead>
                            <tbody class="table-body" id="dataTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="right-footer">
                    <ul>
                        <li>Subtotal:<span class="sub" id="subtotal"></span></li>
                        <li>Discount:<span class="dis" id="discount"></span> </li>
                        <li>Total:<span class="total" id="total"></span></li>
                    </ul>
                </div>
                <div class="invoice-foot text-center">
                    <p><span class="text-bold text-center">NOTE:&nbsp;</span>This is computer generated receipt and does not require physical signature.</p>
                    <div class="invoice-btns">
                        <button type="button" class="invoice-btn" id="checkinventory">
                            <span>
                                <i class='bx bxs-data'></i>
                            </span>
                            <span>Check Inventory</span>
                        </button>
                        <div class="dropdown">
                            <button type="button" id="dropdown" class="invoice-btn dropdown">
                                <span>
                                    <i class='bx bxs-down-arrow'></i>
                                </span>
                                <span>Action</span>
                            </button>
                            <div class="dropdown-content">
                                <a class="approve" id="dropdown1" href="#">Approve</a>
                                <a class="submit" id="dropdown2" href="#">Submit to Top Management</a>
                                <a class="disapprove" id="dropdown3" href="#">Disapprove</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/adminquotepagelist.js"></script>
</section>




